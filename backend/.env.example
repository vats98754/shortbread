# Copy this file to .env and fill in your MongoDB connection string
# Get a free MongoDB Atlas account at https://cloud.mongodb.com

# For local development (optional - will use local MongoDB if not provided)
# MONGODB_URI=mongodb://localhost:27017/shortbread

# For production deployment (required)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shortbread

# JWT Secret for authentication (required in production)
JWT_SECRET=your-secret-key-change-this-in-production

# Email configuration (for magic links)
EMAIL_FROM=noreply@shortbread.app

# Environment
NODE_ENV=development