# Environment Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/shortbread
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shortbread
DB_USER=username
DB_PASS=password

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=shortbread-videos

# Cloudflare R2 Configuration (alternative to S3)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=shortbread-videos
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Storage Provider (s3 or r2)
STORAGE_PROVIDER=s3

# Video Processing
MAX_VIDEO_SIZE_MB=100
ALLOWED_PLATFORMS=youtube,instagram,twitter,facebook